<Window x:Class="PL.SkimmerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="SkimmerWindow" Height="450" Width="800" >
    <Grid>
        <Grid x:Name="SkimmerGrid" Margin="58,15,0,196" Width="310" HorizontalAlignment="Left" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Content="Id"  Margin="3" Grid.Row="0"  >
                <Label.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-0.605"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Label.RenderTransform>
            </Label>
            <Label Content="Skimmer Model" Grid.Row="1"  />
            <Label Content="Weight Category" Grid.Row="2" />
            <Label Content="Station ID"  Margin="3" Grid.Row="3" />
            <TextBox  x:Name="textId" Margin="3,10,34,17" Grid.Column="1" Text="{Binding Id,ValidatesOnExceptions=True,UpdateSourceTrigger=PropertyChanged}" />
            <TextBox x:Name="textSkimmerModel"  Margin="3,10,34,17" Grid.Row="1" Grid.Column="1" Text="{Binding SkimmerModel}"/>
            <ComboBox x:Name="ComboWeightCategory"  Margin="3,10,34,17" Grid.Row="2" Grid.Column="1"  Text="Choose a Weight"  
                            IsEditable="True" IsReadOnly="True"
                      SelectedItem="{Binding WeightCategory}" />
            <ComboBox x:Name="ComboStationID" Margin="3,10,34,17" Grid.Row="3" Grid.Column="1" Text="Choose a Station"  
                            IsEditable="True" IsReadOnly="True"
                      SelectedItem="{Binding StationID}"  />
        </Grid>
        <Button Content="ADD" Margin="122,264,0,0" Height="34" Width="77"
                HorizontalAlignment="Left"  VerticalAlignment="Top"  Click="btnShow_Click" />

    </Grid>
</Window>

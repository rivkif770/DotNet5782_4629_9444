<Window x:Class="PL.SkimmerListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="SkimmerListWindow" Height="640" Width="800">
    <Grid Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="400*"/>
        </Grid.RowDefinitions>
        <Grid Name="UpGrid" HorizontalAlignment="Stretch" Height="auto" Grid.Row="0" VerticalAlignment="Stretch" Width="auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions >
            <Button x:Name="btnAddSkimmer" Content="add a skimmer" Margin="95,109,107,-76" Click="btnAddSkimmer_Click" Grid.ColumnSpan="2" />
            <ComboBox Name="StatusSelector" Text="Choose a Status" 
                      ToolTip="Choose  a Status" Margin="169,194,107,-151" IsEditable="True" IsReadOnly="True" 
                      SelectionChanged="StatusSelector_SelectionChanged" RenderTransformOrigin="0.048,0.42" Grid.ColumnSpan="2"/>
            <Label Content="Weight"  Margin="69,258,49,-229" FontSize="15" RenderTransformOrigin="1.072,0.536"/>
            <ComboBox Name="WeightSelector" Text="Choose a Weight" 
                      ToolTip="Choose  a Weight" Margin="169,265,107,-222" IsEditable="True" IsReadOnly="True" 
                      SelectionChanged="WeightSelector_SelectionChanged" RenderTransformOrigin="0.048,0.42" Grid.ColumnSpan="2"/>
        </Grid>
        <Label Content="status" Grid.Column="0" Margin="69,119,649,397" FontSize="15" RenderTransformOrigin="1.072,0.536" Grid.Row="1"/>
        <ListView x:Name="SkimmerListView" Grid.Row="1" MouseDoubleClick="SkimmerListView_MouseDoubleClick" Margin="422,5,0,0" >
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>

<Window x:Class="PL.SkimmerListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="SkimmerListWindow" Height="640" Width="800">
    <Grid Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="400*"/>
        </Grid.RowDefinitions>
        <Grid Name="UpGrid" Height="auto" Width="auto" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions >
            <Button x:Name="btnAddSkimmer" Content="add a skimmer" Margin="95,109,107,-76" Grid.ColumnSpan="2" 
                    Click="btnAddSkimmer_Click"/>
            <ComboBox Name="StatusSelector" Text="Choose a Status" Margin="169,194,107,-151" Grid.ColumnSpan="2"
                      ToolTip="Choose  a Status"  IsEditable="True" IsReadOnly="True" 
                      SelectionChanged="StatusSelector_SelectionChanged" />
            <Label Content="Weight"  Margin="69,258,49,-229" FontSize="15"/>
            <ComboBox Name="WeightSelector" Text="Choose a Weight" Margin="169,265,107,-222" Grid.ColumnSpan="2"
                      ToolTip="Choose  a Weight"  IsEditable="True" IsReadOnly="True" 
                      SelectionChanged="WeightSelector_SelectionChanged" />
        </Grid>
        <Label Content="status" Margin="69,119,649,397" Grid.Row="1" Grid.Column="0" FontSize="15" />
        <ListView x:Name="SkimmerListView" Margin="422,5,0,0" Grid.Row="1" MouseDoubleClick="SkimmerListView_MouseDoubleClick" >
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
